<script>
  document.addEventListener('DOMContentLoaded', function() {
    function toggleTableRows() {
      const rows = document.querySelectorAll("#myTable .more-rows");
      const button = document.querySelector("#seeMoreButton");
      const isExpanded = button.textContent === 'See Less';  // Check the current state

      anime({
        targets: rows,
        opacity: isExpanded ? [1, 0] : [0, 1], // Reverse opacity
        height: isExpanded ? ['auto', 0] : [0, 'auto'], // Transition height in both directions
        duration: 700,
        easing: 'easeInOutQuad',
        begin: function() {
          rows.forEach(row => row.style.display = ''); // Always ensure rows are visible at the start
        },
        complete: function() {
          rows.forEach(row => row.style.display = row.style.opacity === '0' ? 'none' : '');
        }
      });

      button.textContent = button.textContent === 'See More' ? 'See Less' : 'See More';
    }

    // Bind the toggleTableRows function to the button
    const button = document.querySelector("#seeMoreButton");
    if (button) {
      button.addEventListener("click", toggleTableRows);
    }
  });
</script>

