---
import { getCollection } from 'astro:content';
import BlogLayout from '../../layouts/BlogLayout.astro';
import { getReadingTime } from '../../utils/readingTime';

export async function getStaticPaths() {
  const posts = await getCollection('posts');
  return posts
    .filter((post) => post.data.is_published)
    .map((post) => ({
      params: { slug: post.slug },
      props: { post },
    }));
}

const { post } = Astro.props;
const { Content } = await post.render();

// Destructure your frontmatter
const { title, description, date, is_published } = post.data;

// Compute reading time from raw markdown body
const readingTime = getReadingTime(post.body);
---
<BlogLayout {title} {description} {date} {readingTime}>
  <Content />
</BlogLayout>
