<nav class="main-nav" aria-label="Main navigation">
  <button class="hamburger" aria-label="Open menu" aria-expanded="false" aria-controls="nav-overlay">
    ☰
  </button>

  <div class="nav-desktop">
    <a href="/">Home</a>
    <a href="/blog">Blog</a>
    <a href="/about-me">About Me</a>
    <div class="dropdown">
      <span class="dropdown-label">More</span>
      <div class="dropdown-content">
        <a href="/hex-guesser">Hex Guesser</a>
        <a href="/projects">Projects</a>
        <a href="/contact">Contact</a>
      </div>
    </div>
  </div>

  <div class="nav-overlay" id="nav-overlay" aria-hidden="true">
    <button class="close-btn" aria-label="Close menu">×</button>
    <a href="/">Home</a>
    <a href="/blog">Blog</a>
    <a href="#get-to-know-me">Get To Know Me</a>
    <a href="/hex-guesser">Hex Guesser</a>
    <div class="dropdown" tabindex="0" aria-haspopup="true" aria-label="More options">
      <span class="dropdown-label">More ▾</span>
      <div class="dropdown-content" role="menu">
        <a href="/about" role="menuitem">About</a>
        <a href="/projects" role="menuitem">Projects</a>
        <a href="/contact" role="menuitem">Contact</a>
      </div>
    </div>
  </div>

  <script>
    const hamburger = document.querySelector('.hamburger');
    const navOverlay = document.getElementById('nav-overlay');
    const closeBtn = document.querySelector('.close-btn');
    const allNavLinks = navOverlay.querySelectorAll('a');
    const dropdown = document.querySelector('.dropdown');

    const toggleMenu = (show) => {
      navOverlay.classList.toggle('show', show);
      hamburger.setAttribute('aria-expanded', show);
      navOverlay.setAttribute('aria-hidden', !show);
      document.body.classList.toggle('lock-scroll', show);
    };

    hamburger.addEventListener('click', () => toggleMenu(!navOverlay.classList.contains('show')));
    closeBtn.addEventListener('click', () => toggleMenu(false));
    allNavLinks.forEach(link => link.addEventListener('click', () => toggleMenu(false)));
    document.addEventListener('keydown', (e) => { if (e.key === 'Escape') toggleMenu(false); });
    dropdown?.addEventListener('click', () => dropdown.classList.toggle('open'));
  </script>
</nav>
