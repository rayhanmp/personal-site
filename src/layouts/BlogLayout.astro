---
export interface Props {
  title: string;
  description: string;
  date: Date;
  isPublished: boolean;
  readingTime?: number;
}

const { title, description, date, is_published, readingTime } = Astro.props;
const author = "Rayhan M";
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{title} | Rayhan's Blog</title>
    <meta name="description" content={description} />
    <link rel="stylesheet" href="/css/normalize.css" />
    <link rel="stylesheet" href="/css/skeleton.css" />
    <link rel="stylesheet" href="/css/custom.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Fira+Code&display=swap" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Raleway:wght@400;700&display=swap" rel="stylesheet" />
    <script src="https://kit.fontawesome.com/8c35c08da0.js" crossorigin="anonymous" defer></script>
    <style>
      .blog-container {
        max-width: 720px;
        margin: 4rem auto;
        padding: 0 1rem;
        line-height: 1.7;
        font-size: 1.9rem;
      }

      .blog-title {
        font-size: 5rem;
        margin-bottom: 0.3rem;
        font-weight: 700;
        color: #222;
      }

      .post-meta {
        font-style: italic;
        color: #777;
        font-size: 1.7rem;
        margin-bottom: 1.5rem;
      }

      .back-button {
        margin-bottom: 2rem;
        display: inline-block;
        background-color: #f5f5f5;
        color: #333;
        padding: 0.5rem 1rem;
        border-radius: 8px;
        text-decoration: none;
        transition: background-color 0.2s ease;
      }

      .back-button:hover {
        background-color: #eaeaea;
      }

      .blog-post h2, .blog-post h3 {
        margin-top: 2rem;
        font-weight: 600;
      }

      .blog-post img {
        max-width: 100%;
        height: auto;
        margin: 1rem 0;
        border-radius: 10px;
      }

      .blog-post pre {
        overflow-x: auto;
        border-radius: 8px;
        padding: 1rem;
        margin: 1.5rem 0;
      }

      .blog-post code {
        font-family: 'Fira Code', 'Consolas', monospace;
        font-size: 0.95rem;
        line-height: 1.6;
      }

      .blog-post blockquote {
        margin: 1.5rem 0;
        padding: 1rem 1.5rem;
        background: #f9f9f9;
        border-left: 4px solid #ccc;
        color: #555;
      }

      footer {
        margin-top: 4rem;
        text-align: center;
        font-size: 0.9rem;
        color: #999;
      }

      .blog-divider {
        height: 1px;
        background: linear-gradient(to right, #ddd, #ccc, #ddd);
        margin: 2.5rem 0;
        border-radius: 1px;
        opacity: 0.9;
      }
    </style>
  </head>
  <body>
    <div class="container blog-container">
      <a href="/blog" class="back-button">← Back to Home</a>
      <h1 class="blog-title">{title}</h1>
      <div class="post-meta">
        By {author} · {date.toLocaleDateString('en-US', { year: 'numeric', month: 'short', day: 'numeric' })} · {readingTime ?? '??'} min read
      </div>
      <div class="blog-divider"></div>
      <main class="blog-post">
        <slot />
      </main>
      <footer>
        &copy; 2024 Rayhan Maheswara Pramanda
      </footer>
    </div>
  </body>
</html>
